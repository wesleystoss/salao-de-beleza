<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <h1 class="page-title">Nossos Serviços</h1>
        <p class="page-subtitle">Descubra nossa gama completa de serviços profissionais</p>
    </div>
</section>

<!-- Services Section -->
<section class="services-page">
    <div class="container">
        <% servicos.forEach(categoria => { %>
            <div class="service-category">
                <h2 class="category-title"><%= categoria.categoria %></h2>
                <div class="services-list">
                    <% categoria.items.forEach(servico => { %>
                        <div class="service-item">
                            <div class="service-header">
                                <h3 class="service-name"><%= servico.nome %></h3>
                                <div class="service-price"><%= servico.preco %></div>
                            </div>
                            <p class="service-description"><%= servico.descricao %></p>
                            <div class="service-details">
                                <div class="detail">
                                    <i class="fas fa-clock"></i>
                                    <span><strong>Duração:</strong> <%= servico.duracao %></span>
                                </div>
                                <div class="detail">
                                    <i class="fas fa-check-circle"></i>
                                    <span><strong>Inclui:</strong> <%= servico.inclui.join(', ') %></span>
                                </div>
                            </div>
                            <a href="/contato" class="btn btn-primary">
                                <i class="fas fa-calendar-alt"></i>
                                Agendar
                            </a>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% }); %>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <div class="cta-content">
            <h2 class="cta-title">Gostou dos Nossos Serviços?</h2>
            <p class="cta-description">
                Agende seu horário e venha experimentar a qualidade dos nossos serviços
            </p>
            <div class="cta-actions">
                <a href="/contato" class="btn btn-primary btn-large">
                    <i class="fas fa-calendar-alt"></i>
                    Agendar Horário
                </a>
                <a href="https://wa.me/5511999999999" class="btn btn-outline btn-large" target="_blank">
                    <i class="fab fa-whatsapp"></i>
                    Falar no WhatsApp
                </a>
            </div>
        </div>
    </div>
</section> 